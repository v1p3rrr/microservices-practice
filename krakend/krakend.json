{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway for microservices",
  "timeout": "30000ms",
  "cache_ttl": "3000s",
  "extra_config": {
    "router": {
      "return_error_msg": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/orderpayment",
      "method": "GET",
      "input_query_strings": ["id"],
      "backend": [
        {
          "url_pattern": "/order",
          "method": "GET",
          "host": [
            "alpha:8081"
          ]
        },
        {
          "url_pattern": "/payment",
          "method": "GET",
          "host": [
            "beta:8082"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/getall",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/allorders",
          "method": "GET",
          "host": [
            "alpha:8081"
          ],
          "is_collection": true,
          "mapping": {
            "collection": "orders"
          }
        },
        {
          "url_pattern": "/allpayments",
          "method": "GET",
          "host": [
            "beta:8082"
          ],
          "is_collection": true,
          "mapping": {
            "collection": "payments"
          }
        }
      ]
    }
  ],
  "output_encoding": "json",
  "debug_endpoint": true,
  "port": 8080
}